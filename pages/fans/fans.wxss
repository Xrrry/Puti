page
{
  background-color: #F2F3F5;
}
.titleclass
{
  font-size: 16px;
}
.con
{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 30rpx;
  background-color: white;
  border-radius: 100rpx;
  height: 140rpx;
  width: 95%;
  box-shadow: 0px 0px 5px 1px #999999;
}
.titlecon
{
  width: 270rpx;
  margin-right: 20rpx;
  margin-left: 180rpx;
}
.con2
{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.noneclass{
  display: flex;
  flex-direction: column;
  align-items: center; 
  margin-top: 300rpx;
}
.nonetext
{
  font-size: 22px;
}
.imageclass
{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  margin-left: 30rpx;
  border-radius: 50%;
  z-index: 2;
}
.detailcon
{
  margin-left: 180rpx;
}
.detailimage
{
  height: 30rpx;
  width: 30rpx;
}
.shadow
{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  z-index: 1;
  filter: blur(5px) brightness(80%) opacity(0.8);
  margin-top: 15rpx;
  margin-left: 30rpx;
}
.shadowclass
{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}