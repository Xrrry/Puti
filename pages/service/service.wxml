<!--pages/service/service.wxml-->
<van-notify id="custom-selector" />
<view class="con">
  <view class="message">
    <van-field label="建议" value="{{service}}" type="textarea" placeholder="请输入您的建议或意见" autosize border="{{ false }}" bind:change="serviceOnBindChange" />
  </view>
  <view class="blank"></view>
  <van-field clearable value="{{phonenumber}}" label="手机号" placeholder="请输入手机号" bind:change="phoneOnBindChange" />
</view>
<view class="button">
  <van-button size="large" bind:click="clickSave" type="primary">提交</van-button>
</view>